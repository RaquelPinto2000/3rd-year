<Window x:Name="mousele" x:Class="Aula_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aula_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MouseLeftButtonDown="mousele_MouseLeftButtonDown" MouseDoubleClick="mousele_MouseDoubleClick">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="105*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="Button_1" Content="Button" HorizontalAlignment="Left" Margin="343,119,0,0" VerticalAlignment="Top" Width="123" Height="44" MouseMove="Button_MouseMove" Click="Button_Click" RenderTransformOrigin="0.506,-1.391"/>
        <Button Content="XAML button" Margin="10,209,9.6,6" Name="button2" FontSize="25"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="620,32,0,0" TextWrapping="Wrap" Text="{Binding Value, ElementName=sliderName, StringFormat={}{0:0.00}}" VerticalAlignment="Top" Width="120"/>
        <Slider x:Name ="sliderName" HorizontalAlignment="Left" Margin="620,80,0,0" VerticalAlignment="Top" Width="120" Maximum="100"/>
    </Grid>
</Window>
