<Page x:Class="Aula_02_WPF.DETI_Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Aula_02_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="DETI_Home">
    <Grid Margin="10,0,10,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="Logo_ua.jpg"></ImageBrush>
        </Grid.Background>
        <Label Grid.Column="1" VerticalAlignment="Center" FontFamily="Trebuchet MS" FontWeight="Bold" FontSize="18" Foreground="#0066cc" HorizontalAlignment="Center">
            Cursos do DETI
        </Label>
        <Border Grid.Column="1" Grid.Row="1" Height="35" Padding="5" Background="#4E87D4">
            <Label Name="label"  Content="Cursos" />
        </Border>
        <ListBox Name="cursosListBox"  Grid.Column="1" Grid.Row="2" MouseDoubleClick="ListBoxItem_MouseDoubleClick">
            <ListBoxItem Content="Computadores e telemática"/>
            <ListBoxItem Content="Electrónica e telecomunicações"/>
            <ListBoxItem Content="Engenharia Informática"/>
        </ListBox>
        <Button Grid.Column="1" Grid.Row="3" Content="_Ver" HorizontalAlignment="Right" Width="80"  Margin="0,10,0,0" Click="Button_Click"></Button>
    </Grid>
</Page>
